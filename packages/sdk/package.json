{
  "name": "@sodax/sdk",
  "version": "0.1.0",
  "description": "SODAX Purple SDK - Core functionality with beautiful purple theming",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "checkTs": "tsc --noEmit",
    "lint": "biome lint . --write",
    "pretty": "biome format . --write"
  },
  "dependencies": {
    "@sodax/types": "workspace:*",
    "bignumber.js": "catalog:"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "tsup": "catalog:",
    "typescript": "catalog:"
  },
  "files": [
    "dist/**"
  ]
}